\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{pacotes/titulo}


% pacote para opções do tipo "key=value"
\RequirePackage{kvoptions}
\SetupKeyvalOptions{
    family = titl,
    prefix = titl@
}
% opção de imagem do software
\DeclareStringOption{logo}
% link do software
\DeclareStringOption{link}
\ProcessKeyvalOptions*

% configuração do título
\RequirePackage{titling}
% pacote para incluir imagens
\RequirePackage{graphicx}



%%%%%%%%%%%%%%%%
%% DEFINIÇÕES %%

% desenho do logo
\newcommand{\@logo}{}

% comando que desenha o logo
\newcommand{\softwarelogo}{
    \renewcommand{\@logo}{
        \href{\titl@link}{%
            \includegraphics[width=0.3\textwidth]{\titl@logo}%
        }\\[\bigskipamount]
    }
}

% configurações do título
\pretitle{
	\begin{center}
        \normalfont\LARGE\sffamily
}
\posttitle{
        \@logo
    \end{center}
}


\endinput
